<html>
  <head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>HEETETRIS</title>
    <link rel="stylesheet" href="../client/css/index.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Jua&display=swap">
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
  </head>
  <body>
      <div class="wrap">
        <div class="grid-column menu">
          <h1><a href="/api/tetris">Tetris</a></h1>
            <% if(!loggedin) { %>
              <button id="login-button" onclick="displayLogin()">Login</button><br>
              <div id="login" class="menu-modal">
                <form method="POST" action="/api/login">
                  <label for="id">ID: </label>
                  <input type="text" name="id"><br>
                  <label for="password">Password: </label>
                  <input type="password" name="password"><br>
                  <input id="submitUser" type="submit" value="Login">
                </form>
              </div>
              <button id="signup-button" onclick="displaySigniup()">Signup</button><br>
            
              <div id="signup" class="menu-modal">
                <form method="post" action="/api/signup">
                  <label for="id">ID: </label>
                  <input type="text" name="id"><br>
                  <label for="password">Password: </label>
                  <input type="password" name="password"><br>
                  <label for="nickname">Nick-Name: </label>
                  <input type="text" name="nickname"><br>
                  <input id="submitUser" type="submit" value="Signup">
                </form>
              </div>
            <% } else { %>
              <h2 id="nickname"><%=nickname%></h2>
              <button id="logout-button"><a href="/api/logout">Logout</a></button><br>
            <% } %>
          <button id="show-leaderboard">Leader Board</button><br>
          
        </div>
        <div class="main-cnt" >
          <canvas id="main-board" class="main-board"></canvas>
        </div>
        <div class="sub-cnt">
          <canvas id="sub-board" class="sub-board"></canvas>
          <p>레벨: <span id="level"></span><span id="levelUp" class="levelUp"></span></p>
          <p>점수: <span id="score"></span><span id="addScore" class="addScore"></span></p>
          <p>라인: <span id="lines"></span><span id="removeLines" class="removeLines"></span></p>
          <p>최고 점수: <span id="highScore"></span></p>
          <p><button id="start" onclick="start()" class="start">게임 시작</button></p>
          <p><button id="pause" onclick="pause()" class="pause">일시 정지</button></p>
          <p><button id="quit" onclick="quit()" class="quit">게임 종료</button></p>
          <p><span id="end-game" class="end-game"></span></p>
          <div id="bottom-cnt" class="bottom-cnt">
            <div id="keypad" class="keypad">
              <div class="arrowKeyCnt">
                <div class="arrowKeyUp">
                  <button id="upKey" class="rotation" onclick="pressKey(38)">블럭 돌리기</button>
                  <button id="downKey" class="down" onclick="pressKey(40)">내리기</button>
                </div>
                <br>
                <div class="arrowKeyDown">
                  <button id="left" class="arrow" onclick="pressKey(37)">←</button>
                  <button id="right" class="arrow" onclick="pressKey(39)">→</button>
                </div>
              </div>
              <br>
              <button id="space" class="space" onclick="pressKey(32)">드랍</button>
            </div>
          </div>
        </div>
        <p>
          <div id="leaderboard">
          </div>
        </p>
      </div>
    <script>
      let loggedin = '<%=loggedin%>'
    </script>
    <script src="/client/js/api.js"></script>
    <script src="/client/js/display.js"></script>
    <script src="/client/js/rules.js"></script>
    <script src="/client/js/board.js"></script>
    <script src="/client/js/piece.js"></script>
    <script src="/client/js/main.js"></script>
  </body>
</html>